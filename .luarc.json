{
  "$schema": "https://raw.githubusercontent.com/LuaLS/vscode-lua/master/setting/schema.json",
  "runtime.version": "LuaJIT",
  "diagnostics": {
    "enable": true,
    "globals": [
      "vim",
      "Snacks",
      "describe",
      "pending",
      "it",
      "before_each",
      "after_each",
      "MiniDeps"
    ]
  },
  "workspace": {
    "library": ["lua", "$VIMRUNTIME/lua", "${3rd}/luv/library"],
    "checkThirdParty": false,
    "maxPreload": 2000,
    "preloadFileSize": 1000
  },
  "type": {
    "weakNilCheck": true,
    "weakUnionCheck": true,
    "castNumberToInteger": true
  },
  "telemetry.enable": false,
    "diagnostics.disable": [
        "redefined-local",
        "duplicate-set-field"
    ]
}
